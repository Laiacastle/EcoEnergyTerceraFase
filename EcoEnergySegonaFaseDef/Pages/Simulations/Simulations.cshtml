
@page
@model EcoEnergySegonaFaseDef.Pages.Simulations.SimulationsModel
@{
    ViewData["Title"] = "Llistat de simulacions";
}

<h1>Llista de simulacions</h1>

<table >
    <thead>
        <tr>
            <th>Hores de sol / Velocitat del vent / cabal d'aigua</th>
            <th>Rati</th>
            <th>Preu</th>
            <th>Cost</th>
            <th>Data</th>
            <th>Tipus de Simulació</th>
            <th>Result</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var energia in Model.sistems)
        {
            <tr>
                <td>@energia.Value</td>
                <td>@energia.Tipus</td>
                <td>@energia.Rati</td>
                <td>@energia.EnergiaGenerada</td>
                <td>@energia.CostKWh</td>
                <td>@energia.PreuKWh</td>
                <td>@energia.DataHora</td>
                <td><a asp-page="../Delete" asp-route-simulation="@energia.Id" asp-route-consume="@null" asp-route-indicator="@null" class="btn btn-primary, btn-futurista">Esborra</a></td>
            </tr>
        }
    </tbody>
</table>
<div class="botonFinal">
    <a asp-page="AddSimulation" class="btn btn-primary, btn-futurista">Afegir nova simulació</a>
</div>